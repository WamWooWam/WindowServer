{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2017",
    "lib": [
      "ES2022",
      "es2022.sharedmemory",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "Bundler",
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist"
  }
}