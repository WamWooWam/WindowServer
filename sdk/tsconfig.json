{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2017",
    "lib": [
      "ES2022",
      "es2022.sharedmemory",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "Bundler",
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "outDir": "./types",
    "rootDir": "./src",
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*.ts"
  ]
}